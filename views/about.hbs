<div class="row">
	<div class="col-md-12">
		<h3>Leave a Comment</h3>
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					<form method="POST" action="/about/addComment">
						<div class="well">
							<div class="row">
								<div class="col-md-6">
									<input type="text" class="form-control" placeholder="Name" name="authorName" />
									<br />
								</div>
								<div class="col-md-6">

									<input type="email" class="form-control" placeholder="Email" name="authorEmail" />
									<br />
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<input type="text" class="form-control" placeholder="Subject" name="subject" />
									<br />
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<textarea class="form-control" rows="8" placeholder="Comment" name="commentText"></textarea>
									<br />
								</div>
							</div>
							<div class="row">
								<div class="col-md-2 col-md-offset-10">
									<button type="submit" class="btn btn-primary form-control">Comment</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
{{#if data}}
<div class="row">
	<div class="col-md-12">
		<h3>All Comments</h3>
		<hr />
	</div>
</div>
{{/if}} {{#each data}}
<div class="row">
	<div class="col-md-12">
		{{subject}}
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					{{commentText}} <br /><br /> Posted on: {{postedDate}} by <a href="{{authorEmail}}">{{authorName}}</a>
				</div>
			</div>
			{{#each replies}}
			<div class="row">
				<div class="col-md-12">
					<div class="well">{{commentText}} <br/>
						</div> Post on: {{repliedDate}} by <a href="{{authorEmail}}"> {{authorName}}</a>
					</div>
				</div>
				{{/each}}
				<div class="row">
					<div class="col-md-12">
						<button class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#reply-{{_id}}" aria-expanded="false">Reply</button>
					</div>
				</div>
			</div>
			<div class="collapse" id="reply-{{_id}}">
				<div class="col-md-12">
					<form method="POST" action="/about/addReply">
						<div class="well">
							<div class="row">
								<div class="col-md-6">
									<input type="text" class="form-control" placeholder="Name" name="authorName" />
									<br />
								</div>
								<div class="col-md-6">

									<input type="email" class="form-control" placeholder="Email" name="authorEmail" />
									<br />
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<textarea class="form-control" rows="8" placeholder="Comment" name="commentText"></textarea>
									<br />
								</div>
							</div>
							<div class="row">
								<div class="col-md-2 col-md-offset-10">
									<input type="hidden" value="{{_id}}" name="comment_id" />
									<button type="submit" class="btn btn-primary form-control">Reply</button>

								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

{{/each}}